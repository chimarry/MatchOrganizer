@model IEnumerable<MatchOrganizer.ViewModels.TeamViewModel>
@{
    /**/

    ViewBag.Title = "Teams";
}


@Html.Partial("_MessagePartial")

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <a class="btn btn-primary mb-3" onclick="Create()" style="margin-top:100px;margin-left:10px"><i class="fas fa-plus"></i> Create new team</a>

        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-sm" id="table-polaznici" style="margin-top:10px">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.NoPlayers)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var team in Model)
                {
                    <tr>

                        <td>@team.Name</td>
                        <td>@team.NoPlayers</td>
                        <td class="text-nowrap text-right">
                            <a class="btn btn-outline-info btn-sm" href="@Url.Action("Details", new { @id = team.TeamId })"><i class="fas fa-info-circle"></i> Details</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div class="modal fade" id="modal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">

                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body" id="createModal">
            </div>
            <!-- Modal footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<script>
    var Create = function () {
        var url = "/TeamMenagment/Create";
        $("#createModal").load(url, function () {
            $("#modal").modal("show");
        })
    }
</script>

